<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputWordActivity">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="@dimen/_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16"
            android:layout_marginTop="@dimen/_16"
            android:layout_marginEnd="@dimen/_16"
            android:ems="10"
            android:hint="@string/new_word"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="@dimen/_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_32"
            android:layout_marginTop="@dimen/_16"
            android:layout_marginEnd="@dimen/_32"
            android:backgroundTint="#00BCD4"
            android:text="@string/save"
            app:layout_constraintEnd_toEndOf="@+id/et_input"
            app:layout_constraintStart_toStartOf="@+id/et_input"
            app:layout_constraintTop_toBottomOf="@+id/et_input" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>